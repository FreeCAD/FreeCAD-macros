		self.valueChange(value)
		FreeCAD.Console.PrintMessage("ww 5 " +str(self.keyctrl) +"! ")
		# self.keyctrl=False 
		
	def rotZ(self, delta):
		self.keyctrl=2
		self.rot(1,delta)
		self.keyctrl=False 

	def rotY(self, delta):
		self.keyctrl=3
		self.rot(2,delta)
		self.keyctrl=False 

	def rotX(self, delta):
		self.keyctrl=1
		self.rot(0,delta)
		self.keyctrl=False 

		


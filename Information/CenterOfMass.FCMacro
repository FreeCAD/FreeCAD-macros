            if hasattr(sel[sol], 'IfcRole'):
                if sel[sol].IfcRole == 'Reinforcing Bar':
                    axis = sel[sol].Base.Placement.Rotation.multVec(FreeCAD.Vector(0, 0, -1))
                    if hasattr(sel[sol], 'Direction'):
